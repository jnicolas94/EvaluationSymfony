{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>
    <a href="{{ path('article_new') }}" type="button" class="btn btn-primary" style="margin: 1rem 0 2rem 0">Ajouter un article</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.description }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" type="button" class="btn btn-success">Voir</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" type="button" class="btn btn-warning">Modifier</a>
                    {{ include('article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Il n'y a pas d'articles ici...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    
{% endblock %}
